{% extends '::base.html.twig' %}

{% block body %}
	<div class="container">
		{% include '::header.html.twig' %}
		<div ng-view>
			<div class="row feed">
				<div class="row"><div class="col-md-6 col-sm-6 col-xs-6"><h2>Derniers cadeaux</h2></div></div>

				<div class="row products">
					{% for product in products %}
						<div class="col-md-2 col-sm-3 col-xs-5 product">
							<div class="product-image">
								<a href="../profiles/{{ product.user.facebookId }}#/profile/{{ product.user.facebookId }}/product/{{ product.id }}"><img src='{{ product.thumb_url }}' /></a>
								<p>
									<a href="../profiles/{{ product.user.facebookId }}#/profile/{{ product.user.facebookId }}/product/{{ product.id }}">
										<span class="productname">{{ product.name }}</span>
									</a>
								</p>
								<p class="sharefriend">
									<a href="../profiles/{{ product.user.facebookId }}#/profile/{{ product.user.facebookId }}"><img src="https://graph.facebook.com/{{ product.user.facebookId }}/picture?width=20&height=20" /></a> 
									<a href="../profiles/{{ product.user.facebookId }}#/profile/{{ product.user.facebookId }}">
										<span class="sharename">{{ product.user.fullName }}</span>
									</a>
								</p>
							</div>
						</div>
					{% else %}
						<div style="margin-top:100px">Votre feed se remplira avec les cadeaux que vos amis auront enregistr√©s.</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}


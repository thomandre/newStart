{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-md-8 col-sm-2 col-xs-4">
			<h1 class="landing">HaveFyve</h1>
			<h2 style="font-size:18px;">Vos meilleurs cadeaux</h2>
		</div>
		<div class="col-md-2 col-sm-2 col-xs-4">
			<p class='login'>
				<button class="btn" id="disconnect" onclick="fb_logout();">Déconnexion</button>
				<button class="btn btn-primary" id="connect" onclick="fb_connect();">> Se connecter via Facebook</button>
				<button class="btn btn-primary" id="login" onclick="fb_login();">> S'inscrire via Facebook</button>
				<button class="btn" id="loading">Connexion à Facebook...</button>
			</p>
		</div>
	</div>
	<noscript>
		<div class="container">
			<p class="whiteText" style="margin-top:25%;">HaveFyve necessite l'activation de Javascript pour fonctionner correctement</p>
		</div>
	</noscript>
	{% for message in app.session.flashbag.get('error') %}
		<div class="alert alert-error">
		    <!--button type="button" class="close" data-dismiss="alert">×</button!-->
		    {{ message }}
		</div>
	{% endfor %}

	{% raw %}
		<div class="row">
			<div class="alert alert-info" ng-show="info" style="display:none;">{{ info }}</div>
			<div class="alert alert-danger" ng-show="danger" style="display:none;">{{ danger }}</div>
			<div class="alert alert-warning" ng-show="warning" style="display:none;">{{ warning }}</div>
			<div class="alert alert-success" ng-show="success" style="display:none;">{{ success }}</div>
			<div class="alert alert-notice" ng-show="notice" style="display:none;">{{ notice }}</div>
		</div>
	{% endraw %}

	<div id="carousel-example-generic" data-interval="5000" data-wrap="false" class="carousel slide" data-ride="carousel">
	  <!-- Indicators -->
	  <ol class="carousel-indicators">
	    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
	    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
	    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
	    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
	  </ol>

	  <!-- Wrapper for slides -->
	  <div class="carousel-inner">
	    <div class="item active">
	      <img src="{{ asset('bundles/newstartcommon/images/cap_1.jpg') }}" alt="...">
	    </div>
	    <div class="item">
	      <img src="{{ asset('bundles/newstartcommon/images/cap_2.jpg') }}" alt="...">
	    </div>
	    <div class="item">
	      <img src="{{ asset('bundles/newstartcommon/images/cap_3.jpg') }}" alt="...">
	    </div>	    
	    <div class="item">
	      <img src="{{ asset('bundles/newstartcommon/images/cap_4.jpg') }}" alt="...">
	    </div>
	  </div>

	  <!-- Controls -->
	  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
	    <span class="glyphicon glyphicon-chevron-left"></span>
	  </a>
	  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
	    <span class="glyphicon glyphicon-chevron-right"></span>
	  </a>
	</div>
</div>
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		body:before {
			background:url('http://farm5.staticflickr.com/4038/4654423909_4b0363aaa2.jpg');
			background-size: cover;
			filter: url("#blur-effect");
		}
	</style>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}
